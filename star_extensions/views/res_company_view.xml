<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Company View Inherit -->

    <record id="view_res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.view.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <page name="general_info" position="after">
                <page string="Terms &amp; Condition" name="terms_and_condition">         
                    <group>
                        <group>
                            <field name="sale_terms_cond"/>
                        </group>
                        <group>
                            <field name="invoice_terms_cond" />
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
